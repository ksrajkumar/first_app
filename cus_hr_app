    _columns={
        'meet_id':fields.many2one('hr.applicant','Meeting'),
        'name':fields.char('Subject',size=512),
        'date':fields.datetime('Date'),
        'user_id':fields.many2one('res.users','Responsible'),
        'location':fields.char('Location',size=512),
        }


